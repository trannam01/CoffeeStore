@using CoffeeStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<CoffeeStore.Models.NHASANXUAT>
@{
    ViewBag.Title = "NhaSanXuat";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .section {
        padding-left: 10px;
        padding-right: 10px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        padding-top: 120px;
    }

    td {
        font-size: 14px;
    }

    body{
        margin-top: 100px;
    }

    .pagination {
        display: inline;
        padding-left: 0;
        list-style: none;
    }

    a{
        color: black;
    }
</style>
<body>
    <section class="section" id="products">
        <h2>QUẢN LÝ THÔNG TIN NHÀ SẢN XUẤT</h2>
        <p>
            <button style="border-radius: 10px; width: 100px; height: 30px; background-color: blue">@Html.ActionLink("Thêm NSX", "ThemNSX")</button>
        </p>
        <table class="table">
            <tr>
                <th>Tên Nhà Sản Xuất</th>
                <th>Địa Chỉ</th>
                <th>Điện Thoại</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenNSX)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Diachi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DienThoai)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "SuaNSX", new { id = item.MaNSX }) |
                        @Html.ActionLink("Chi tiết", "ChitietNSX", new { id = item.MaNSX }) |
                        @Html.ActionLink("Xóa", "XoaNSX", new { id = item.MaNSX })
                    </td>
                </tr>
            }
        </table>
        <div class="col-lg-12">
            <div class="pagination">
                <ul>
                    <li style="text-align:center">
                        @Html.PagedListPager(Model, page => Url.Action("NhaSanXuat", new { page = page }))
                    </li>
                </ul>
            </div>
        </div>
    </section>
</body>
@model CoffeeStore.Models.CAFE

@{
    ViewBag.Title = "Suacoffee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    h2 {
        padding-top: 120px;
        text-align: center;
    }

    p {
        padding-left: 20px;
        padding-right: 20px;
    }

    body {
        padding-top: 150px;
        margin-left: 50px;
        margin-right: 50px;
    }

    a {
        color: black;
    }
</style>
<body>
    <h2 style="text-align:center">Chỉnh sửa thông tin sản phẩm</h2>

    @using (Html.BeginForm("Suacoffee", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal" style="color:black">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.MaCAFE)

    <div class="form-group">
        @Html.LabelFor(model => model.MaCAFE, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div style="font:18px; padding: 5px 0 0 5px"> @Model.MaCAFE </div>
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.TenCAFE, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenCAFE, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenCAFE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.Giaban, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Giaban, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.Mota, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea name="Mota" rows="10" cols="100">@Model.Mota.ToString()</textarea>
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.Ngaycapnhat, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="NGAYCAPNHAT" value="@String.Format("{0:yyyy-MM-dd}", Model.Ngaycapnhat)"/>
            @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.Anhbia, new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="display: grid">
            Chọn ảnh mới
            <input type="file" name="fileupload" />
            <img src="@Url.Content("~/HinhSanPham/" + Model.Anhbia)" width="250px" /> (Ảnh hiện tại)
            @ViewBag.Thongbao
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.Soluongton, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Soluongton, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.MaLoai, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaLoai")
        </div>
    </div>

    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(model => model.MaNSX, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaNSX")
        </div>
    </div>

    <div class="form-group" style="margin-top:20px; text-align:center">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập Nhật" class="btn btn-default" style="background-color:powderblue" />
        </div>
    </div>
</div>
    }

    <div style="margin:20px">
        <button style="border-radius: 20px; width: 100px; height: 40px; background-color: blue">@Html.ActionLink("Trở Về", "Coffee")</button>
    </div>
</body>
<script type="text/javascript">
    function AutoUpload() {
        document.getElementById("formupload").submit();
    }
</script>
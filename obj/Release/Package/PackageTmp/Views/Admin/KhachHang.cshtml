@using CoffeeStore.Models
@using PagedList.Mvc;
@model PagedList.PagedList<CoffeeStore.Models.KHACHHANG>
@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .section {
        padding-left: 10px;
        padding-right: 10px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        padding-top: 120px;
    }

    td {
        font-size: 14px;
    }

    .pagination {
        display: inline;
        padding-left: 0;
        list-style: none;
    }
</style>
<body style="margin-top:100px">
    <section class="section" id="products">
        <h2>QUẢN LÝ THÔNG TIN KHÁCH HÀNG</h2>
        @Html.Action("SearchKH", "Admin")
        <table class="table">
            <tr>
                <th>Họ Tên</th>
                <th>Ngày Sinh</th>
                <th>Địa Chỉ</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Tài Khoản</th>
                <th>Mật Khẩu</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ngaysinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiachiKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DienthoaiKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Taikhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Matkhau)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "SuaKH", new { id = item.MaKH }) |
                        @Html.ActionLink("Chi tiết", "ChitietKH", new { id = item.MaKH }) |
                        @Html.ActionLink("Xóa", "XoaKH", new { id = item.MaKH })
                    </td>
                </tr>
            }
        </table>
        <div class="col-lg-12">
            <div class="pagination">
                <ul>
                    <li style="text-align:center">
                        @Html.PagedListPager(Model, page => Url.Action("KhachHang", new { page = page }))
                    </li>
                </ul>
            </div>
        </div>
    </section>
</body>

@{
    Layout = null;
}
<style>
    body {
        background-image: url('/images/login.png');
        max-width: auto;
        background-size: cover;
        background-position-y: -196px;
        font-family: 'Poppins', sans-serif;
    }

    .wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .dangky {
        max-width: 400px;
        background: rgba(0,0,0,0.8);
    }

    .form-input {
        position: relative;
        max-width: 500px;
    }

    #box {
        border: 0;
        background-color: transparent;
        border-bottom: 1px solid #fff;
        height: 28px;
        width: 300px;
        color: #fff;
        display: flex;
        position: relative;
        padding-left: 20px;
        font-size: 15px;
    }

    .input {
        border: 0;
        background-color: transparent;
        border-bottom: 1px solid #fff;
        height: 28px;
        width: 300px;
        color: #fff;
        display: flex;
        position: relative;
        padding-left: 20px;
        transition: all 0.2s linear;
        font-size: 15px;
    }

        .input:focus {
            border-color: white;
        }

    .eye {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        max-width: 20px;
    }

    .hidden {
        display: none;
    }

    .form-input ::placeholder {
        color: white;
    }


    #content {
        font-size: 25px;
        color: white;
        text-align: center;
        margin-bottom: 30px;
    }



    .table {
        margin-left: 20px;
        margin-right: 20px;
    }

    .submit {
        background-color: transparent;
        border: 1px solid #fff;
        text-transform: uppercase;
        padding: 6px 10px;
        color: #fff;
        margin-top: 30px;
    }

        .submit:hover {
            border: 1px solid #60A2F5;
            color: #60A2F5;
            cursor: pointer;
        }

    td {
        color: #fff;
    }

    .fa {
        position: absolute;
        float: right;
        padding-top: 5px;
        color: white;
    }

    .signup {
        color: #fff;
        font-size: 14px;
        text-decoration: none;
    }

        .signup:hover {
            color: #60A2F5;
            cursor: pointer;
        }

    img {
        height: 80px;
        width: 115px;
        float: left;
        padding-top: 20px;
    }
</style>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="wrapper">
        <div class="dangky">
            <table class="table" align="center">
                <h2 id="content" text-align:center">ĐĂNG NHẬP</h2>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <tr class="form-input" style="height: 40px">
                        <td>
                            <i class="fa fa-user-circle-o"></i>
                            <input id="box" type="text" placeholder="Tên đăng nhập" @Html.TextBox("TenDN")
                            <p style="color:red">@ViewData["Loi1"]</p>
                            <br />
                        </td>
                    </tr>
                    <tr class="form-input" style="height: 40px">
                        <td>
                            <i class="fa fa-unlock-alt"></i>
                            <input class="input" type="password" placeholder="Mật khẩu" @Html.Password("MatKhau")
                            <svg xmlns="http://www.w3.org/2000/svg" class="eye eye-close" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" class="eye eye-open hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>

                            <p style="color:red">@ViewData["Loi2"]</p>
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="text-align: right">
                            <img src="~/images/logoweb.png" />
                            <input class="submit" type="submit" value="Đăng nhập" />
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="text-align: right">
                            <a class="signup" href="/Admin/DangKy">Đăng ký thành viên</a>
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="text-align: right">
                            <a class="signup" href="/Admin/Index">Trang Chủ</a>
                        </td>
                    </tr>
                }
            </table>
            <h3 id="content" style="color:red; text-align:center">@ViewBag.ThongBao</h3>
        </div>
    </div>
    <script>
            const input = document.querySelector(".input");
            const eyeOpen = document.querySelector(".eye-open");
            const eyeClose = document.querySelector(".eye-close");

            eyeOpen.addEventListener("click", function () {
                eyeOpen.classList.add("hidden");
                eyeClose.classList.remove("hidden");
                input.setAttribute("type", "password");
            });

            eyeClose.addEventListener("click", function () {
                eyeOpen.classList.remove("hidden");
                eyeClose.classList.add("hidden");
                input.setAttribute("type", "text");
            });
    </script>
</body>
</html>

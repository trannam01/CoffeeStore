@model CoffeeStore.Models.KHACHHANG

@{
    ViewBag.Title = "ChitietKH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .dl-horizontal {
        padding-left: 20px;
        padding-right: 20px;
    }

    dt {
        display: inline;
        margin-top: 10px;
    }

    h2 {
        padding-top: 120px;
        text-align: center;
    }

    p {
        padding-left: 20px;
        padding-right: 20px;
        margin-top: 20px;
    }

    body {
        margin-top: 100px;
        margin-left: 20px;
        margin-right: 20px;
    }

    a {
        color: black;
    }
</style>
<body>
    <h2 style="text-align:center">Chi Tiết Khách Hàng</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ Tên:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>
            <dt>
                Tài Khoản:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Taikhoan)
            </dd>
            <dt>
                Mật Khẩu:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Matkhau)
            </dd>
            <dt>
                Email:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Địa Chỉ:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DiachiKH)
            </dd>
            <dt>
                Điện Thoại:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DienthoaiKH)
            </dd>
            <dt>
                Ngày Sinh:
            </dt>
            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.Ngaysinh)
            </dd>
        </dl>
    </div>
    <p style="margin:20px">
        <button style="border-radius: 20px; width: 100px; height: 40px; background-color: blue">@Html.ActionLink("Điều Chỉnh", "SuaKH", new { id = Model.MaKH })</button> |
        <button style="border-radius: 20px; width: 100px; height: 40px; background-color: blue">@Html.ActionLink("Trở Về", "KhachHang")</button>
    </p>
</body>
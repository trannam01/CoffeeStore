@model CoffeeStore.Models.NHASANXUAT

@{
    ViewBag.Title = "ThemNSX";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .section {
        padding-left: 10px;
        padding-right: 10px;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        padding-top: 120px;
    }

    body {
        padding-top: 150px;
        margin-top: 100px;
        margin-left: 50px;
        margin-right: 50px;
    }

    a {
        color: black;
    }
</style>
<body>
    @using (Html.BeginForm("ThemNSX", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="color:black">
            <h4 style="text-align:center">NSX News</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.TenNSX, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNSX, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TenNSX, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:10px">
                @Html.LabelFor(model => model.Diachi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Diachi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:10px">
                @Html.LabelFor(model => model.DienThoai, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienThoai, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top:20px; text-align:center">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm NSX" class="btn btn-default" style="background-color:powderblue" />
                </div>
            </div>
        </div>
    }

    <div style="margin:20px">
        <button style="border-radius: 20px; width: 100px; height: 40px; background-color: blue">@Html.ActionLink("Trở Về", "NhaSanXuat")</button>
    </div>
</body>
@model CoffeeStore.Models.CAFE

@{
    ViewBag.Title = "Xoacoffee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .dl-horizontal {
        padding-left: 20px;
        padding-right: 20px;
    }

    dt {
        display: inline;
    }

    h2 {
        padding-top: 120px;
        text-align: center;
    }

    p {
        padding-left: 20px;
        padding-right: 20px;
    }

    body{
        padding-top:150px;
    }

    a {
        color: black;
    }
</style>
<body>
    <h2 style="text-align:center; color:red">@ViewBag.Thongbao</h2>
    <br />
    <h2>XÁC NHẬN THÔNG TIN COFFEE CẦN XÓA</h2>

    <div>
        <hr />
        <h3 style="text-align:center">Bạn có chắc muốn xóa coffee này ?</h3>
        <dl class="dl-horizontal">
            <dt>
                Tên coffee:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenCAFE)
            </dd>
            <dt>
                Giá bán:
            </dt>
            <dd>
                @String.Format("{0:0,0}", Model.Giaban) VNĐ
            </dd>
            <dt>
                Mô tả:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Mota)
            </dd>
            <dt>
                Ngày cập nhật:
            </dt>
            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
            </dd>
            <dt>
                Ảnh sản phẩm:
            </dt>
            <dd>
                <img src="@Url.Content("~/HinhSanPham/" + Model.Anhbia)" width="250px" />
            </dd>
            <dt>
                Số lượng tồn:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Soluongton)
            </dd>
            <dt>
                Ngày cập nhật:
            </dt>
            <dt>
                Loại coffee:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LOAICAFE.TenLoai)
            </dd>
            <dt>
                Nhà sản xuất:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NHASANXUAT.TenNSX)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-top: 20px; margin-bottom: 20px; margin-left: 20px">
                <input type="submit" value="Xóa sản phẩm" class="btn btn-default" style="background-color:lightblue" /> |
                <button style="border-radius: 20px; width: 100px; height: 40px; background-color: blue">@Html.ActionLink("Trở Về", "Coffee")</button>
            </div>
        }
    </div>
</body>